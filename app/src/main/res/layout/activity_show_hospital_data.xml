<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".showHospitalData"
        android:orientation="vertical"
        android:background="@drawable/dd">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topName"
            android:padding="10dp">

            <TextView
                android:id="@+id/HosName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hospital Name"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"/>


        </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address :"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/HosAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone No.:"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/HosNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email :"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/HosMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp" />
                <!--
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Departments"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold"
                         />
                    <TextView
                        android:id="@+id/HosType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         />
                    <TextView
                        android:id="@+id/HosType1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         />
                        -->

                <Button
                    android:id="@+id/HosSchedule"
                    android:layout_width="250dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bgbtn"
                    android:clickable="true"
                    android:text="Schedule Check Up"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/chTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    android:text="Click to choose time"/>
                <TextView
                    android:id="@+id/chDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click to choose date"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:clickable="true"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/submitBtn"
                    android:layout_width="250dp"
                    android:layout_height="65dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:clickable="true"
                    android:text="Submit"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bgbtn"
                    />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </ScrollView>



    </LinearLayout>

